<?xml version="1.0" encoding="utf-8"?>
<!--
  This drawable creates a background with a dashed border for the image placeholder.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A very light, semi-transparent background color -->
    <solid android:color="#0D000000" />

    <!-- Defines the roundness of the corners -->
    <corners android:radius="16dp" />

    <!-- Defines the dashed border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="?attr/colorPrimary"
        android:dashWidth="12dp"
        android:dashGap="8dp" />
</shape>
