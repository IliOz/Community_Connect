<?xml version="1.0" encoding="utf-8"?>
<!--
  This drawable creates a background shape with rounded corners and a stroke (border).
  It's used to give the input field containers a modern, clean look.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Sets the background color of the shape. Using a light gray. -->
    <solid android:color="#F1F1F1" />

    <!-- Defines the border (stroke) of the shape. -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Defines the roundness of the corners. -->
    <corners android:radius="12dp" />

</shape>
