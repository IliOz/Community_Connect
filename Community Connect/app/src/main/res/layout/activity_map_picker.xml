<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        tools:context=".Activity.MapPickerActivity">

    <!-- The osmdroid MapView -->
    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- A marker icon in the center of the screen -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_location_pin"
        android:layout_centerInParent="true"
        android:contentDescription="Map Marker" />

    <!-- A button to confirm the selected location -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/select_location_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Confirm This Location"
        app:cornerRadius="16dp"
        android:padding="16dp"/>

</RelativeLayout>
